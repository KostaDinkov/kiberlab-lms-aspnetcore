@model KiberlabLMS.ViewModels.Sections.VideoSectionViewModel

<h4>Video Section</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateVideoSection" asp-route-lessonId="@ViewData["lessonId"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VideoUrl" class="control-label"></label>
                <input asp-for="VideoUrl" class="form-control" />
                <span asp-validation-for="VideoUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="VideoUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="VideoUrl" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="CreateVideoSection" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>