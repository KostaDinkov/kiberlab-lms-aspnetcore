@model List<KiberlabLMS.Web.ViewModels.Courses.CourseViewModel>

@{
    this.ViewData["Title"] = "Courses";
}

<h1>@this.ViewData["Title"]</h1>

@foreach (var course in this.Model)
{
    <div>@course.CourseCode: <a asp-controller="Courses" 
                                asp-action="Details"
                                asp-route-id = "@course.Id">@course.Name</a>
    </div>
    <div>Description: @course.Description</div>
}


